{
  "version": 2,
  "functions": {
    "api/index.js": {
      "includeFiles": ["data/**", "Public/**"]
    }
  },
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node" },
    { "src": "Public/**", "use": "@vercel/static" }
  ],
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/index.js" },
    { "source": "/a/:path*", "destination": "/api/index.js" },
    { "source": "/(.*)", "destination": "/Public/$1" }
  ]
}
